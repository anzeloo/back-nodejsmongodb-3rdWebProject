<%-  include  ('partials/_header');  -%>

    <div class="container">
        <div class="row">
            <!-- FORM -->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            
                            <div class="form-group">
                                <input type="text" name="firstname" placeholder="Insert a name" class="form-control">
                            </div>

                            <div class="form-group">
                                <input type="text" name="lastname" placeholder="Insert a lastname" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block"> Add user </button>

                        </form>
                    </div>
                </div>
            </div>
            <!-- LIST -->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>First name</th>
                            <th>Last name</th>
                            <th>Type id</th>
                            <th>Number id</th>
                            <th>Active</th>
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- for(var i = 0; i < users.length; i++){ -%>
                            <tr>
                                <td> <%= users[i].firstname %> <td>  
                                <td> <%= users[i].lastname %> <td>  
                                <td> <%= users[i].type %> <td>  
                                <td> <%= users[i].number %> <td>  
                                <td> <%= users[i].active %> <td> 
                                <td>  <a href="/edit/<% users[i]._id %>" class="btn btn-info"> Edit </a>  
                                      <a href="/delete/<%= users[i]._id %>" class="btn btn-danger"> Delete </a> 
                                </td> 
                            </tr>
                        <%- } -%> 
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<%-  include  ('partials/_footer');  -%>